<h1 class="my-3">All our flats (<%= @flats.size %>)</h1>

<div class="row">
  <% @flats.each do |flat| %>
    <div class="col-lg-3 col-md-4 col-sm-6">
      <div class="card shadow-sm my-2">
        <div class="card-body bg-light">
          <h5 class="card-title"><%= flat.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
          <p class="card-text"><%= flat.description %></p>
          <p class="card-text"><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %> <i class="fas fa-user-friends"></i> <%= flat.number_of_guests %></p>
        </div>
        <%= link_to 'More info', flat_path(flat), class: "card-link p-2" %>
        
      </div>
    </div>
  <% end %>
</div>
