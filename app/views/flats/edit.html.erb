<div class="container">
  <h1>Edit flat</h1>
  <%= simple_form_for @flat do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.submit nil, class: "btn btn-outline-primary" %>
  <% end %>
</div>